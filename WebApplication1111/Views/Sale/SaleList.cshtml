@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<h1>판매 리스트</h1>
<ul id="saleContainer">
    @foreach (var item in ViewBag.Sale)
    {
        <li>
            <button type="button" data-btn="edit">수정</button>
            <button type="button" data-btn="delete">삭제</button>
            <p hidden>코드: <span id="code">@item.Code</span></p>
            <p>이름: <span id="name">@item.Product</span></p>
            <p>수량: <span id="quantity">@item.Count</span></p>
            <p>거래처: <span id="customer">@item.Account</span></p>

            <form id="editForm" hidden>
                <select id="products">
                    @foreach (var product in ViewBag.Products)
                    {
                        <option value="@product.Name">@product.Name</option>
                    }
                </select>
                <input type="number" placeholder="수량" id="purchaseQuantity" />
                <select id="customers">
                    @foreach (var customer in ViewBag.Customers)
                    {
                        <option value="@customer.Name">@customer.Name</option>
                    }
                </select>
                <button type="submit">등록</button>
            </form>
        </li>
    }
</ul>
<a href="~/Sale/">판매 등록</a>
<script type="module" src="~/Scripts/saleList.js"></script>